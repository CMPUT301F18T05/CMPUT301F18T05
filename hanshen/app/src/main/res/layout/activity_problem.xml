<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProblemCreate">

    <EditText
        android:id="@+id/createDescription"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="description"
        android:inputType="textPersonName"
        android:maxLength="100"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/countButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/creatDescription" />

    <TextView
        android:id="@+id/creatDescription"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="description (optional)"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/createDescription"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/createTitle" />

    <TextView
        android:id="@+id/promote_top"
        android:layout_width="0dp"
        android:layout_height="34dp"
        android:text="add title"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/createTitle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/countButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:onClick="showCount"
        android:text="count"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/createProblem"
        app:layout_constraintEnd_toStartOf="@+id/historyButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/createDescription" />

    <Button
        android:id="@+id/historyButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:onClick="showHistory"
        android:text="Problem"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/createProblem"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/countButton"
        app:layout_constraintTop_toBottomOf="@+id/createDescription" />

    <EditText
        android:id="@+id/createTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="title"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/creatDescription"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/promote_top" />

    <Button
        android:id="@+id/createProblem"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:onClick="createProblem"
        android:text="save"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/countButton" />
</android.support.constraint.ConstraintLayout>